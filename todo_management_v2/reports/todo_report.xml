<odoo>

    <record id="todo_task_report" model="ir.actions.report" >
       <field name="name">todo task report</field>
       <field name="model">todo.task</field>
       <field name="report_type">qweb-pdf</field>  <!--qweb-pdf or qweb-html  -->
       <field name="binding_model_id" ref="model_todo_task"/>
       <field name="binding_type">report</field>  <!-- this field have to type  [ report - [default] no write ]-->
       <field name="report_name">todo_management_v2.report_style_template_line</field> <!-- this field take value = "addon_name.id"  this id for style template and this id must be uneiq-->
       <!--       <field name="paperformat_id" ref="app_one.paperformat_custom_temp_line"></field>-->
    </record>

    <template id="report_style_template_line">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="todo_management_v2.report_lines_document"/>
            </t>
       </t>
    </template>

    <template id="report_lines_document">
        <t t-call="web.external_layout">
            <table class="table table-condensed" style="width:100%;font-family: 'Poppins', sans-serif;  border: 1px solid #FFF;">
                <tbody style="font-size: 26px">
                    <tr>
                        <td style="width:27%; font-weight: bold;">Task : </td>
                        <td><t t-esc="o.name"/></td>
                    </tr>
                    <tr>
                        <td style="width:27; font-weight: bold;">Due Date : </td>
                        <td><t t-esc="o.due_date"/></td>
                    </tr>
                    <tr>
                        <td style="width:27; font-weight: bold;">Assign To : </td>
                        <td><t t-esc="o.assign_to_id.name"/></td>
                    </tr>
                    <tr>
                        <td style="width:27%; font-weight: bold;">Estimated Time : </td>
                        <td><t t-esc="str(int(o.estimated_time)) + ' H'"/></td>
                    </tr>
                    <br/>
                    <br/>
                    <tr><td style="font-weight: bold; font-size: 26px;">Description : </td></tr>
                    <tr><td style="font-size: 26px;"><t t-esc="o.description"/></td></tr>
                </tbody>
            </table>
            <table style="width:100%;font-family: 'Poppins', sans-serif;font-size: 26px; border: 1px solid #FFF;">
                <tbody>
                    <tr><td style="font-weight: bold; font-size: 26px;">Description : </td></tr>
                    <tr><td style="font-size: 26px;"><t t-esc="o.description"/></td></tr>
                </tbody>
            </table>
    </t>
    </template>

